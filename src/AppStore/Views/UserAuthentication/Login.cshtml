@model AppStore.Models.DTO.LoginModel
@{
    
}

<form class="w-40" asp-action="Login" asp-controller="UserAuthentication" method="post">
    <h2 class="pb-10">Login</h2>

    <div class="input-container">
        <label class="w-40" for="Username">Username</label>
        <input type="text" class="input" asp-for="Username" placeholder="Username" />
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Username"></span>
    </div>

    <div class="input-container">
        <label for="Password">Password</label>
        <input type="password" class="input" asp-for="Password" placeholder="Password" />
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Password"></span>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert mb-1">
            <span>@TempData["Message"]</span>
        </div>
    }
    <div class="input-container">
        <button type="submit" class="btn btn-primary">Login</button>
    </div>
</form>
